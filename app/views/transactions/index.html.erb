<h1>Listing transactions</h1>
<%= link_to 'Send New Document', new_transaction_path, :class => "button gray" %>

<table>
  <tr>
    <th>S.No</th>
    <th>Document</th>
    <th>Date</th>
    <th>Secret Code</th>
    <th></th>
  </tr>

<% @transactions.each do |transaction| %>
  <tr>
    <td><%= link_to "#{transaction.id}", transaction %></td>
    <td><%= link_to "#{transaction.document.doc_file_name}", transaction.document.doc.url(:original, false) %></td>
    <td><%= transaction.created_at %></td>
    <td><%= transaction.document_secret %></td>
    <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
    <td><%= link_to 'x', transaction, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

