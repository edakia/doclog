<!DOCTYPE html>
<html>
<head>
  <title>Doclog</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>

	<h1><%= link_to "eDakia", "/" %> </h1>
    <div class="right">
	  <% if user_signed_in? %>  
		<%= current_user.mobile %> | <span><%= link_to "Sign out", destroy_user_session_path, :class => "button blue" %></span>
	  <% else %>
		<span><%= link_to "Login", new_user_session_url, :class => "button blue" %></span> | 
		<span><%= link_to "Register", new_user_registration_url, :class => "button blue" %></span> <br> <br>
		<span><%= link_to "Get Mail", receive_transactions_url, :class => "button green" %></span> |
		<span><%= link_to "Send Mail", new_transaction_url, :class => "button green" %></span>
	  <% end %>
	</div>

<%= yield %>

</body>
</html>
